        <div class="worriesWrap">
          <div class="pictureWorries">

          <%= image_tag "Questions-rafiki (1).png" ,class:"pictureWorries " %>

          </div>
          <div>
            <ul class="specificWorries text-yellow-500 lg:font-light font-normal lg:text-2xl  lg:ml-16 lg:pt-8">
