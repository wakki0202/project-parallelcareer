    <script src="https://kit.fontawesome.com/a5c533f20f.js" crossorigin="anonymous"></script>
    <script>
      var a = '.mpLRextendTrigger';
      if (a == '.mpLRextendTrigger') {
        b = 'mpLRextend';
        c = '.mpapperTrigger';
        d = 'mpapper'
      }

      function BgFadeAnime(){
          // 背景色が伸びて出現（左から右）
        $(a).each(function(){ //bgLRextendTriggerというクラス名が
          var elemPos = $(this).offset().top-50;//要素より、50px上の
          var scroll = $(window).scrollTop();
          var windowHeight = $(window).height();
          if (scroll >= elemPos - windowHeight){
            $(this).addClass(b);// 画面内に入ったらbgLRextendというクラス名を追記
          }else{
            $(this).removeClass(b);// 画面外に出たらbgLRextendというクラス名を外す
          }
        }); 

        // 文字列を囲う子要素
        $(c).each(function(){ //bgappearTriggerというクラス名が
          var elemPos = $(this).offset().top-50;//要素より、50px上の
          var scroll = $(window).scrollTop();
          var windowHeight = $(window).height();
          if (scroll >= elemPos - windowHeight){
            $(this).addClass(d);// 画面内に入ったらbgappearというクラス名を追記
          }else{
            $(this).removeClass(d);// 画面外に出たらbgappearというクラス名を外す
          }
        });   
      }
      $(window).scroll(function (){
        BgFadeAnime();
      });
    </script>
