



<body class="providerPage">
  <div class="side">
    <%= render '/works/side' %>
  </div>
 
  <div class="main">
    <div class="mainHeader">
    <ul>
      <li class=""><span>ログアウト</span></li>
      <li><%= current_provider.email %></li>
    </ul>
    </div>
    
        
    <div class="userIndex">
      <h3 class="text-center">お知らせ</h3>
      <div class="providerTable">
      <a href="news/new" class="toNew">＋ 新規作成</a>

        <table class="table userTable">
          <thead class="heading">
            <tr>
              <th>タイトル</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @news.each do |news| %>
              <tr>
                <td><%= news.title %></td>
                <td><%= link_to '詳細', news %></td>
                <td><%= link_to '編集', edit_news_path(news) %></td>
                <td><%= link_to '削除', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>

  </div>
</body>