<body class="providerPage">
  <div class="side">
    <%= render '/works/side' %>
  </div>
 
  <div class="main">
    <div class="mainHeader">
    <ul>
    <% if provider_signed_in? %>
      <li class=""><span><%= link_to '事業者ログアウト' , destroy_provider_session_path, method: :delete,data: { confirm: 'ログアウトしますか？' } %></span></li> 
      <li><%= current_provider.email %></li>
      <% else %>
      <li class=""><span>ログアウト</span></li> 
      <li>管理者名</li>
    
      <% end %>

    </ul>
    </div>
    
        
    <div class="userIndex">
      <h3 class="text-center">お知らせ</h3>
      <div class="providerTable">
     

      
        <% if provider_signed_in? %>

          <div class="provider-index">
         

          <div class="providers">
          <p>
            <strong>タイトル:</strong>
            <%= @news.title %>
          </p>

          <p>
            <%= auto_link(simple_format(@news.content), html: {target: '_blank'}) %>
          </p>
          </div>

          <% elsif user_signed_in? %>

          <div class="text-center">
          <p>
            <strong>タイトル:</strong>
            <%= @news.title %>
          </p>

          <p>
            <%= auto_link(simple_format(@news.content), html: {target: '_blank'}) %>
          </p>
          </div>

          <% end %>
        </div>
      </div>

  </div>
</body>






