<body class="post-show">
<%= render '/layouts/header' %>

<% if @provider.img? %>
<%= image_tag(@provider.img.url.to_s) %>
<% else%>
<div> <div>
<% end %>
<table class="office">
<tr>
<th>案件名</th>
<td> <%= @provider.title %></td>
</tr>
<tr>
<th>事業名</th>
<td><%= @provider.company %></td>
</tr>
<tr>
<th>事業者ホームページ欄</th>
<td><%= auto_link(simple_format(@provider.link), html: {target: '_blank'}) %></td>
</tr>
<tr>
<th>報酬</th>
<td><%= @provider.reward %></td>
</tr>
<tr>
<th>仕事内容</th>
<td><%= auto_link(simple_format(@provider.pcontent), html: {target: '_blank'}) %></td>
</tr>
<tr>
<th>報酬支払日</th>
<td><%= @provider.rday %></td>
</tr>
<tr>
<th>報酬内容</th>
<td><%= simple_format(@provider.rcontent) %></td>
</tr>
<tr>
<th>対象地域</th>
<td> <%= simple_format(@provider.area) %></td>
</tr>
<tr>
<th>アピールポイント</th>
<td><%= simple_format(@provider.appeal) %>
</tr>
</table>
<div class="action">
<%= link_to "口コミをする","/providers/#{@provider.id}/introductions/new" %>
</div>
</div> 
</body>