

    

<body class="providerPage">
  <div class="side">
    <%= render '/works/side' %>
  </div>
 
  <div class="main">
    <div class="mainHeader">
    <ul>
    <% if provider_signed_in? %>
      <li class=""><span><%= link_to '事業者ログアウト' , destroy_provider_session_path, method: :delete,data: { confirm: 'ログアウトしますか？' } %></span></li> 
      <li><%= current_provider.email %></li>
      <% else %>
      <li class=""><span>ログアウト</span></li> 
      <li>管理者名</li>
    
      <% end %>

    </ul>
    </div>
    
        
    <div class="userIndex">
      <h3 class="text-center">口コミ一覧</h3>

        <table class="table userTable">
      <tr class="border text-center heading"><th>案件名</th><th class="border border-black">紹介者名</th><th class="border border-black">お客様名</th><th class="border border-black">受信日時</th><th class="border border-black">進捗状況</th><th class="border border-black"></th></tr>
      
      
      <% @introductions.each do |introduction| %> 
      <tr class="border">
      <td class="border border-black"><%= introduction.work.title %></td> 
      <td class="border border-black"><%= introduction.user.username %></td>
      <td class="border border-black"><%= introduction.name %></td>
      <td class=""><%= l introduction.created_at %></td>
      <% if introduction.step == nil %>
        <td class="border border-black">口コミ完了</td>
        <% else %>
        <td class="border border-black"><%= introduction.step %></td>
        <% end %>
        <td class="btn "><a href="<%= introduction.id %>" class=" text-white white-50">詳細</a></td></tr>
      <% end %>
  
      
      </table>
      <%= paginate @introductions %>
      </div>

  </div>
</body>