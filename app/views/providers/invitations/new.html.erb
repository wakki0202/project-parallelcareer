



<body class="providerPage">
  <div class="side">
    <%= render '/works/side' %>
  </div>
 
  <div class="main">
    
  <%= render '/works/side_header' %>
    
        
    <div class="userIndex">
     <h2>事業者を追加する</h2>
     <div class="providerTable">

        <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "providers/shared/error_messages", resource: resource %>

          <% resource.class.invite_key_fields.each do |field| -%>
            <div class="field">
              <%= f.label "追加したい事業者のメールアドレス",class:"fs-4" %>
              <%= f.text_field field,class:"rounded border border-dark fs-4" %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit t("devise.invitations.new.submit_button"),data: { confirm: '招待メールを送信しますか？' },id:"btn",class:"fs-4 " %>
          </div>
        <% end %>

          <table class="table userTable">
        <tr class="heading text-left">
        <th class="border border-black ">ID</th>
        <th class="border border-black ">名前</th>
          <th class="border border-black ">メールアドレス</th>
        </tr>

        <% @providers.each do |provider| %> 
        <tr class="border  text-left">
        <td class="border border-black"><%= provider.id %></td>
        <% if provider.name.present? %>
        <td class="border border-black"><%= provider.name %></td>
        <% else %>
        <td class="border border-black">未登録</td>
        <% end %>
          <td class="border border-black"><%= provider.email %></td>
        </tr>
        <% end %>
        </table>
    </div>

  </div>
  </div>
</body>
