<body class="sign-up">
<div class="sign-up-main">
  <h2>ログイン</h2>
  

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="fields">
        <div class="field">
          <%= f.label :メールアドレス,class:"label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form' %>
        </div>

        <div class="field">
          <%= f.label :password,class:"label" %>
          <%= f.password_field :password, autocomplete: "current-password",class:'form' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログインする",class: 'submit' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
   </div>
</div>
</body>