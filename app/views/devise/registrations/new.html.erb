<body class="devise">
<div class="login-page">
  <div class="formRegistration">
    <form class="register-form">
      <input type="text" placeholder="name"/>
      <input type="password" placeholder="password"/>
      <input type="text" placeholder="email address"/>
      <button>create</button>
      <p class="message">Already registered? <a href="#">Sign In</a></p>
    </form>
    <h2>ユーザー登録</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form class="login-form">

       <%= f.label :お名前,class: 'label' %>
       <%= f.text_field :username, placeholder: '  原　キャリー' %>
  
        <%= f.label :電話番号,class: 'label' %>
        <%= f.text_field :phonenumber, autofocus: true, placeholder: '  09012345678' %>

        <%= f.label :メールアドレス,class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '  paracari@example.com' %>

        <%= f.label :銀行名,class: 'label' %>
        <%= f.text_field :bank, placeholder: '  パラ銀行' %>

        <%= f.label :支店名,class: 'label' %>
        <%= f.text_field :branch, placeholder: '  キャリ支店' %>

        <%= f.label :口座種類,class: 'label' %>
        <%= f.select :kinds, [['普通'], ['当座']], { include_blank: false },class:"kinds" %>

          <%= f.label :口座番号,class: 'label' %>
          <%= f.text_field :banknumber %>

          <%= f.label :password,class: 'label' %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>


          <%= f.label :password_confirmation,class: 'label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      
      <%= f.submit "会員登録する",class:"button" %>


      <% end %>
  
      <p class="message">ログイン<a href="/users/sign_in">こちら</a></p>
    </form>
  </div>
</div>
</body>
